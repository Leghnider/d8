<section id="dashboard-page">
  {{> navbar2}}
  <section class="container-fluid">
    <h3 style="margin: 25px;"><a style="text-decoration: none; color:  #e80d4a; font-weight: bolder;" href="/user/{{user._id}}">{{user.firstName}}</a> - Your
            Potential D8s</h3>
    <div class="row py-4">
      <div class="col-7">
        <div class="row py-2">
          {{#if_eq userProfiles.length 0}}
          <p>Unforturnately their are no other users to 'like', please try again later</p>
          {{/if_eq}}
          {{#if messages}}
          <div class="alert alert-success" role="alert">
            <p>{{messages}} go to <a href="/user/match/{{user._id}}">My Matches</a> to view your match</p>
          </div>
          {{/if}}
          <div id="dashboardCarousel" class="carousel slide" data-interval="false">
            <div class="carousel-inner">
              {{#each userProfiles}}
              <div class="carousel-item {{#if_eq @index 0}} active {{/if_eq}}">
                <div class="card mx-auto" style="width: 30rem; height: 30rem;">
                  <div class="card-img-top card-img-top-dashboard">
                    {{#each this.profileImages}}
                    <img class="card-img-top img-fluid d-block" src="{{this.url}}" alt="Card image cap"
                      class="class img-fluid" style="height: 24rem" ;>
                    {{/each}}
                  </div>

                  <div class="card-body-bio">
                    <div id="user-info">
                      <h5><a style="text-decoration: none; font-weight: bolder;" href="/profiles/{{this._id}}">{{this.username}}</a></h5>
                      {{!-- <p class="card-text">Age: {{this.age}}</p>
                      <p class="card-text">Gender: {{this.gender}}</p>
                      <p class="card-text">Interested in: {{this.interested_in}}</p>
                      <p class="card-text">Location: {{this.location}}</p> --}}
                      <p class="card-text">{{this.bio}}</p>
                    </div>

                    <div class="row py-1 mx-auto" id="like-button">
                      <form action='/user/liked/{{this.id}}' method='post'>
                        <button style="background-color:white; border: white; text-align: center" type="submit"><i
                            class="fas fa-heart fa-2x" style="color: #e80d4a"></i></button>
                      </form>
                    </div>

                  </div>
                </div>
              </div>
              {{/each}}
            </div>
            <a class="carousel-control-prev" style="color: #e80d4a;" href="#dashboardCarousel" role="button"
              data-slide="prev">
              <i class="fa fa-angle-left"></i><i class="fa fa-angle-left"></i>
              <span class="carousel-control-prev-icon" aria-hidden="false"></span>
              <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" style="color: #e80d4a" href="#dashboardCarousel" role="button"
              data-slide="next">
              <i class="fa fa-angle-right"></i><i class="fa fa-angle-right"></i>
              <span class="carousel-control-next-icon" aria-hidden="false"></span>
              <span class="sr-only">Next</span>
            </a>
          </div>
        </div>
      </div>
      <div class="col-5 mx-auto" style="text-align: center;" id="filter-box"> 
        {{#not_eq userProfiles.length 0}}
        <div class="row py-3">
          <h4 style="color: #e80d4a; font-weight: bold; padding-bottom: 20px">Take a 'chance' on love</h4>
          <form id="random-like-form" action="/random" method="post">
            <button class="btn btn-primary btn-lg" style="background-color: #f6ce00 !important; border: #f6ce00;"
              value="random-like">
              <h5>Randomly <i class="fas fa-heart fa-2x" style="color: #e80d4a; padding-top:1px"></i></h5>
            </button>
          </form>
        </div>
        {{/not_eq}}

        <div class="row py-3">

        </div>

        <h4 style="color: #e80d4a; font-weight: bold;">Filter your d8s</h4>
        <form class="filterResults" action="/filtered" method="get">
          <h5 style="font-weight: bolder;">Age: </h5>
          <label for="minage">Min Age:</label>
          <input id="minage" type="number" name="minage" min="18" max="100" placeholder="18">
          <label for="maxage">Min Age:</label>
          <input id="maxage" type="number" name="maxage" min="18" max="100" placeholder="100">
          <h5 style="font-weight: bolder;">Location: </h5>
          <label for="location1">North London</label>
          <input type="checkbox" id="location1" name="location" value="North London">
          <label for="location2" style=>West London</label>
          <input type="checkbox" id="location2" name="location" value="West London">
          <label for="location3">South London</label>
          <input type="checkbox" id="location3" name="location" value="South London">
          <label for="location4">East London</label>
          <input type="checkbox" id="location4" name="location" value="East London">
          <div class="py-3">
            <input type="submit" value="Filter Results">
          </div>
        </form>
      </div>

    </div>
