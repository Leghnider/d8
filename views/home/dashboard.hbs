{{!-- This will have a list of all the profiles --}}
<h1>Your Potential D8s</h1>

<p>
<form id="log-out-form" action="/logout" method="post">
  <button value="Log Out"> Log Out </button>
</form>
</p>

<a href="/user/{{user._id}}">{{user.firstName}}</a>

{{#each userProfiles}}
<div style="border: 1px solid black">
  <p><a href="/profiles/{{this._id}}">Username: {{this.username}}</a></p>
  <p>Age: {{this.age}}</p>
  <p>Gender: {{this.gender}}</p>
  <p>Location: {{this.location}}</p>
  <p>Interested in: {{this.interested_in}}</p>
  <p>Bio: {{this.bio}}</p>
   <div style="display: flex;">
      <form action='/user/disliked/{{this.id}}' method='post'>
    <button style="background-color:white; border: white"type="submit"><i class= "fas fa-times fa-2x" style="color:rgb(215, 83, 83)"></i></button>
  </form>
  
    {{!-- {{#if (hasLiked this.likes userId._id)}} --}}
   <form action='/user/liked/{{this.id}}' method='post'>
   <button style="background-color:white; border: white"type="submit"><i class= "fas fa-heart fa-2x" style="color:rgb(95, 191, 95)"></i></button>
  </form>
</div>
    <br>
   {{!-- {{/if}} --}}
  <p class='likes_recieved'>Liked {{countlikes_received this.likes_received}}</p>
</div>
{{/each}}