<div class="content-container container">
  <main class="form-signin">
    <div class="row py-3">
      <div class="col-12 align-items-centre">
      <img class="mb-4 image-fluid" style="max-width: 300px;" src="images/LogoMakr-5XstTZ.png" alt="" >
    </div>
    </div>
    
    <form id="log-in-form" action="/login" method="post">
      
      <h1 class="h4 mb-3 fw-normal">Please log in</h1>

      <div class="form-floating">
        <input id="email" type="email" name="email" class="form-control" id="floatingInput" placeholder="name@example.com" required>
        <label for="floatingInput">Email address</label>
      </div>
      <div class="form-floating">
        <input id="password" type="password" name="password" class="form-control" id="floatingPassword" placeholder="Password" required>
        <label for="floatingPassword">Password</label>
      </div>

      <button class="w-100 btn btn-lg btn-primary" type="submit">Log in</button>
    </form>
  </main> 
</div>







